{
  "files": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/domain" },
    { "path": "./packages/data" },
    { "path": "./apps/web" },
    { "path": "./app/mobile" }
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@myapp/core/*": ["packages/core/src/*"],
      "@myapp/domain/*": ["packages/domain/src/*"],
      "@myapp/data/*": ["packages/data/src/*"]
    },
    "outDir": "dist"
  }
}
